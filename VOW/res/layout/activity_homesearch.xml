<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
 
    tools:context=".HomeSearchActivity" >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginBottom="20dp" >

           <Spinner
               android:id="@+id/home_search_spin"
               android:layout_width="wrap_content"
               android:layout_height="40dp"
               android:layout_marginTop="2dp" />

           <EditText
               android:id="@+id/home_search_edt"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="2dp"
               android:layout_marginLeft="3dp"
               android:layout_marginRight="5dp"
               android:background="@drawable/search_edittext_shape"
               android:ems="10"
               android:hint="Search..." />

           <ImageView
               android:id="@+id/home_search_img"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_marginTop="5dp"
               android:layout_marginRight="5dp"
               android:src="@drawable/home_search_glass" />
       </LinearLayout>

        <com.vow.utils.XCFlowLayout  
        android:id="@+id/home_search_flowlayout"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"
        android:layout_weight="1" >   
    </com.vow.utils.XCFlowLayout> 
</LinearLayout>
