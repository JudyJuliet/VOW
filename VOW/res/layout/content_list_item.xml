<?xml version="1.0" encoding="utf-8"?>
<!-- 
<span>android:descendantFocusability="blocksDescendants"</span>
 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dip"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/shape_content_item"
    android:orientation="vertical" >
    
    
    <!-- 上半部分，文件图标，名称，下载量，按钮 -->
    
<!-- 下半部分，下载进度条 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp" >

        <com.vow.utils.AvatarImageView
            android:id="@+id/content_list_item_userphoto"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/default_user_photo" />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:orientation="vertical" >
        
        <TextView
            android:id="@+id/content_list_item_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username" />

         <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/content_list_item_tag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/shape_tag_item"
            android:textColor="#7adfb8"
            android:textSize="8sp" 
            />

         <TextView
             android:id="@+id/content_list_item_tag2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="3dp"
             android:layout_marginRight="3dp"
             android:background="@drawable/shape_tag_item"
             android:textColor="#7adfb8"
             android:textSize="8sp" />

          <TextView
              android:id="@+id/content_list_item_tag3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="3dp"
              android:layout_marginRight="3dp"
              android:background="@drawable/shape_tag_item"
              android:textColor="#7adfb8"
              android:textSize="8sp" />

        </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/content_list_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp" />

     <TextView
       android:id="@+id/content_list_item_deleted"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="该内容已被原作者删除,不可再操作。" 
       android:visibility="gone"/>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    
         <ImageView
             android:id="@+id/content_list_item_playbutton"
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:layout_marginTop="3dp"
             android:src="@drawable/play"
             android:visibility="gone" />

         <ImageView
              android:id="@+id/content_list_item_stopbutton"
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:layout_marginTop="3dp"
              android:src="@drawable/pause"
              android:visibility="gone" />
        <SeekBar
            android:id="@+id/content_list_item_playseekbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_download"
            android:progressDrawable="@drawable/player_setting_bright_progressbar"
            android:thumb="@drawable/player_settings_bright_thumb" 
            android:visibility="gone"/>
        
          <ImageView
              android:id="@+id/content_list_item_download"
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:layout_marginTop="3dp"
              android:src="@drawable/content_item_download"
              android:visibility="gone" />

          
          <ProgressBar
		       android:id="@+id/content_list_item_downloadProgressBar"
		       android:layout_width="25dp"
		       android:layout_height="25dp" 
		       android:max="100"
		       android:visibility="gone" />
		     
          
            
     </LinearLayout>
         
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="6dp" >

        <ImageView
            android:id="@+id/content_list_item_image1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:src="@drawable/default_image"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/content_list_item_image2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:src="@drawable/default_image" 
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/content_list_item_image3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/default_image" 
            android:visibility="gone"/>

    </LinearLayout>
    
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="6dp" >

        <ImageView
            android:id="@+id/content_list_item_image4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:src="@drawable/default_image"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/content_list_item_image5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:src="@drawable/default_image" 
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/content_list_item_image6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/default_image"
            android:visibility="gone" />

    </LinearLayout>
    
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="6dp" >

        <ImageView
            android:id="@+id/content_list_item_image7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:src="@drawable/default_image"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/content_list_item_image8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:src="@drawable/default_image"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/content_list_item_image9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/default_image" 
            android:visibility="gone"/>

    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="30dp"
       android:layout_marginLeft="5dp"
       android:layout_marginRight="5dp"
       android:layout_marginTop="10dp"
       android:background="@drawable/shape_content_item" >
        
       <LinearLayout
       android:id="@+id/content_list_item_favoriteButton"     
       android:layout_width="match_parent"
       android:layout_height="30dp"
       android:layout_weight="1"
       android:clickable="true"
        android:gravity="center_horizontal"
       android:background="@drawable/selector_content_item_btndownload"  >
       
       <ImageView
           android:id="@+id/content_list_item_favoriteImage"
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:layout_marginTop="5dp"
           android:src="@drawable/favorite_false" />

       <TextView
           android:id="@+id/content_list_item_favorite"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="7dp"
           android:text="收藏" />

        </LinearLayout>
<!-- 
       <LinearLayout
       android:id="@+id/content_list_item_repostButton"
       android:layout_width="match_parent"
       android:layout_height="30dp"
       android:layout_weight="1"
        android:gravity="center_horizontal"
       android:background="@drawable/selector_content_item_btndownload"  >
       
       <ImageView
           android:id="@+id/content_list_item_repostImage"
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:layout_marginTop="5dp"
           android:src="@drawable/repost" />

       <TextView
           android:id="@+id/content_list_item_reposttimes"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="7dp"
           android:text="转发" />

        </LinearLayout>
      -->   
       <LinearLayout
       android:id="@+id/content_list_item_commentButton"     
       android:layout_width="match_parent"
       android:layout_height="30dp"
       android:layout_weight="1"
       android:clickable="true"
        android:gravity="center_horizontal"
       android:background="@drawable/selector_content_item_btndownload"  >
       
       <ImageView
           android:id="@+id/content_list_item_commentImage"
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:layout_marginTop="5dp"
           android:src="@drawable/comment_bubble" />

       <TextView
           android:id="@+id/content_list_item_commenttimes"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="7dp"
           android:text="评论" />

        </LinearLayout>
        
       <LinearLayout
       android:id="@+id/content_list_item_likeButton"     
       android:layout_width="match_parent"
       android:layout_height="30dp"
       android:layout_weight="1"
       android:clickable="true"
       android:gravity="center_horizontal"
       android:background="@drawable/selector_content_item_btndownload"  >
       
       <ImageView
           android:id="@+id/content_list_item_likeImage"
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:layout_marginTop="5dp"         
           android:src="@drawable/like_false" />

       <TextView
           android:id="@+id/content_list_item_liketimes"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="7dp"
           android:text="赞" />

        </LinearLayout>
   </LinearLayout>

  

</LinearLayout>
